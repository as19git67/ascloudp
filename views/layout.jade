doctype html
html
    head
        title= title
        link(rel='stylesheet', href='/stylesheets/style.css')
        link(rel='stylesheet', href='/lib/bootstrap-3.2.0/css/bootstrap.min.css')
        link(rel='stylesheet', href='/lib/bootstrap-3.2.0/css/bootstrap-theme.min.css')
        link(rel='stylesheet', href='/lib/eonasdan-bootstrap-datetimepicker/css/bootstrap-datetimepicker.min.css')
        meta(name="viewport", content="width=device-width, initial-scale=1")
        style(type="text/css").
            .modal-dialog-full {
                width: 100%;
                height: 100%;
                padding: 0;
                margin: 0;
            }

            .modal-content-full {
                height: 100%;
                border-radius: 0;
                overflow: auto;
            }

            .modal-title-full {
                font-size: 3em;
                font-weight: 300;
                margin: 0 0 20px 0;
            }

            @media (min-width: 768px) {
                .ascloud-left-border-sm {
                    border-left: 1px solid lightgray;
                }
            }

            @media (min-width: 768px) {
                .ascloud-right-border-sm {
                    border-right: 1px solid lightgray;
                }
            }

            @media (min-width: 992px) {
                .ascloud-left-border-md {
                    border-left: 1px solid lightgray;
                }
            }

            @media (min-width: 992px) {
                .ascloud-right-border-md {
                    border-right: 1px solid lightgray;
                }
            }

    body
        div.container-fluid
            div.row
                div(class="navbar navbar-default navbar-fixed-top", role="navigation")
                    div.container-fluid
                        div(class="navbar-header")
                            button(type="button", class="navbar-toggle", data-toggle="collapse", data-target=".navbar-collapse")
                                span.sr-only Toggle navigation
                                span.icon-bar
                                span.icon-bar
                                span.icon-bar
                            a.navbar-brand(href="#") #{appname}
                        div(class="collapse navbar-collapse")
                            ul(class="nav navbar-nav adjusted-nav-left")
                                if pages
                                    each page in pages
                                        li
                                            if page.isSingleEntity
                                                a(href='/#{page.Name}') #{page.EntityNameSingular}
                                            else
                                                a(href='/#{page.Name}') #{page.EntityNamePlural}
                            ul(class="nav navbar-nav", id="otherMenu")
                                li(id="fat-menu-other", class="dropdown")
                                    a(href="#", id="drop4", role="button", class="dropdown-toggle", data-toggle="dropdown") Weitere
                                        span.caret
                                    ul(class="dropdown-menu", role="menu", aria-labelledby="drop4")
                                        if pages
                                            each page in pages
                                                li(role="presentation")
                                                    if page.isSingleEntity
                                                        a(role="menuitem", tabindex="-1", href='/#{page.Name}') #{page.EntityNameSingular}
                                                    else
                                                        a(role="menuitem", tabindex="-1", href='/#{page.Name}') #{page.EntityNamePlural}

                            if user != null && user.menu
                                form(action="/logoff", class="navbar-right", id="logoutForm", method="post")
                                    input(type="hidden", value="#{csrfToken}" name="_csrf")
                                    ul(class="nav navbar-nav navbar-right adjusted-nav-right")
                                        if user.menu.admin
                                            li(id="fat-menu-admin", class="dropdown")
                                                a(href="#", id="drop3", role="button", class="dropdown-toggle", data-toggle="dropdown") Verwaltung
                                                    span.caret
                                                ul(class="dropdown-menu", role="menu", aria-labelledby="drop3")
                                                    if user.menu.admin.users
                                                        li(role="presentation")
                                                            a(role="menuitem", tabindex="-1", href="/admin/usermanagementuserlist") Benutzer
                                                    if user.menu.admin.roles
                                                        li(role="presentation")
                                                            a(role="menuitem", tabindex="-1", href="/admin/usermanagementroles") Rollen
                                                    if user.menu.admin.pages
                                                        li(role="presentation")
                                                            a(role="menuitem", tabindex="-1", href="/admin/pagemanagementpagelist") Seiten
                                                    if user.menu.admin.databasemanagement && ( user.menu.admin.roles || user.menu.admin.users )
                                                        li(role="presentation", class="divider")
                                                    if user.menu.admin.databasemanagement
                                                        li(role="presentation")
                                                            a(role="menuitem", tabindex="-1", href="/admin/databaseManagement") Datenbank
                                        li
                                            a(href="/loginManageAccount", title="Manage") Hallo #{user.UserName}!
                                        li
                                            a(href="javascript:document.getElementById('logoutForm').submit()") Abmelden
                            else
                                ul(class="nav navbar-nav navbar-right adjusted-nav-right")
                                    li
                                        a(href='/login') Anmelden
            div(class="row", style="margin-top:55px")
                div.container-fluid
                    block content

        script(src="/lib/jquery-2.1.1.min.js", type="text/javascript")
        script(src="/lib/moment-2.8.3/moment-with-locales.js", type="text/javascript")
        script(src="/lib/bootstrap-3.2.0/js/bootstrap.min.js", type="text/javascript")
        script(src="/lib/eonasdan-bootstrap-datetimepicker/js/bootstrap-datetimepicker.min.js")
        script(src="/lib/jquery.validate.min.js", type="text/javascript")
        script(src="/lib/jquery.validate.unobtrusive.min.js", type="text/javascript")
        script(src="/javascripts/adjustNavbar.js", type="text/javascript")
