doctype html
html
    head
        title= title
        link(rel='stylesheet', href='/stylesheets/style.css')
        link(rel='stylesheet', href='/lib/bootstrap-3.2.0/css/bootstrap.min.css')
        link(rel='stylesheet', href='/lib/bootstrap-3.2.0/css/bootstrap-theme.min.css')
        meta(name="viewport", content="width=device-width, initial-scale=1")
    body
        div.container-fluid
            div.row
                div(class="navbar navbar-default navbar-static-top", role="navigation")
                    div.container-fluid
                        div.navbar-header
                            button(type="button", class="navbar-toggle", data-toggle="collapse", data-target=".navbar-collapse")
                                span.sr-only Toggle navigation
                                span.icon-bar
                                span.icon-bar
                                span.icon-bar
                            a.navbar-brand(href="#") #{appname}
                        div(class="collapse navbar-collapse")
                            ul(class="nav navbar-nav")
                                if pages
                                    each page in pages
                                        li
                                            if page.isSingleEntity
                                                a(href='/#{page.Name}') #{page.EntityNameSingular}
                                            else
                                                a(href='/#{page.Name}') #{page.EntityNamePlural}
                            if user != null && user.menu
                                form(action="/logoff", class="navbar-right", id="logoutForm", method="post")
                                    input(type="hidden", value="#{csrfToken}" name="_csrf")
                                    ul(class="nav navbar-nav navbar-right")
                                        if user.menu.admin
                                            li(id="fat-menu", class="dropdown")
                                                a(href="#", id="drop3", role="button", class="dropdown-toggle", data-toggle="dropdown") Verwaltung
                                                    span.caret
                                                ul(class="dropdown-menu", role="menu", aria-labelledby="drop3")
                                                    if user.menu.admin.users
                                                        li(role="presentation")
                                                            a(role="menuitem", tabindex="-1", href="/admin/usermanagementuserlist") Benutzer
                                                    if user.menu.admin.roles
                                                        li(role="presentation")
                                                            a(role="menuitem", tabindex="-1", href="/admin/usermanagementroles") Rollen
                                                    if user.menu.admin.pages
                                                        li(role="presentation")
                                                            a(role="menuitem", tabindex="-1", href="/admin/pagemanagementpagelist") Seiten
                                                    if user.menu.admin.databasemanagement && ( user.menu.admin.roles || user.menu.admin.users )
                                                        li(role="presentation", class="divider")
                                                    if user.menu.admin.databasemanagement
                                                        li(role="presentation")
                                                            a(role="menuitem", tabindex="-1", href="/admin/databaseManagement") Datenbank
                                        li
                                            a(href="/loginManageAccount", title="Manage") Hallo #{user.UserName}!
                                        li
                                            a(href="javascript:document.getElementById('logoutForm').submit()") Abmelden
                            else
                                ul(class="nav navbar-nav navbar-right")
                                    li
                                        a(href='/loginRegisterNew') Registrieren
                                    li
                                        a(href='/login') Anmelden
            div.row
                div.container-fluid
                    block content

        script(src="/lib/jquery-2.1.1.min.js", type="text/javascript")
        script(src="/lib/bootstrap-3.2.0/js/bootstrap.min.js", type="text/javascript")
        script(src="/lib/jquery.validate.min.js", type="text/javascript")
        script(src="/lib/jquery.validate.unobtrusive.min.js", type="text/javascript")
